---
import Layout from '~/layouts/Layout.astro';
// If using AstroWind, keep the Layout import to maintain your header/footer
---

<Layout metadata={{ title: 'Skill Check - Play Now' }}>
  <main class="flex flex-col items-center justify-center min-h-screen bg-slate-900">
    <div class="game-wrapper relative w-full max-w-[1280px] aspect-video shadow-2xl border border-slate-700">
      <iframe
        src="/play/index.html"
        class="w-full h-full"
        frameborder="0"
        allow="autoplay; fullscreen; clipboard-read; clipboard-write"
        allowfullscreen></iframe>
    </div>

    <div class="mt-4 text-gray-400 text-sm">
      <p>Controls: Mouse & Keyboard</p>
    </div>
  </main>
</Layout>
