---
import Layout from '~/layouts/Layout.astro';
// If using AstroWind, keep the Layout import to maintain your header/footer
---

<Layout metadata={{ title: 'Skill Check - Play Now' }}>
  <main
    class="fixed inset-0 z-50 flex flex-col items-center justify-center bg-slate-900 md:relative md:min-h-screen md:z-auto md:py-8"
  >
    <div
      class="game-wrapper w-full h-full md:w-full md:max-w-[1280px] md:aspect-video md:h-auto shadow-2xl md:border border-slate-700 bg-black"
    >
      <iframe
        src="/play/index.html?v=9999"
        class="w-full h-full border-none"
        allow="autoplay; fullscreen; clipboard-read; clipboard-write; payment"
        allowfullscreen></iframe>
    </div>
  </main>
</Layout>
