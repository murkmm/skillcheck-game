---
import Layout from '~/layouts/Layout.astro';

// FORCE RELAXED HEADERS
if (Astro.response && Astro.response.headers) {
  Astro.response.headers.set('Cross-Origin-Embedder-Policy', 'unsafe-none');
  Astro.response.headers.set('Cross-Origin-Opener-Policy', 'unsafe-none');
}
---

<Layout metadata={{ title: 'Skill Check - Play Now' }}>
  <main
    class="fixed inset-0 z-50 flex flex-col items-center justify-center bg-[#0e0e11] md:relative md:min-h-screen md:z-auto md:py-8 overflow-hidden md:overflow-auto"
  >
    <!-- THE GAME -->
    <div
      id="game-container"
      class="game-wrapper relative group w-full h-full md:h-auto md:aspect-video md:max-h-[85vh] md:max-w-[calc(85vh*1.778)] bg-[#0e0e11] mx-auto shrink-0"
    >
      <iframe
        src="/play/index.html?v=3"
        class="w-full h-full border-none focus:outline-none"
        allow="autoplay; fullscreen; clipboard-read; clipboard-write; payment"
        allowfullscreen
      >
      </iframe>

      <button
        id="fullscreen-btn"
        class="absolute bottom-4 right-4 z-50 p-2 bg-black/50 hover:bg-blue-600 text-white rounded-lg backdrop-blur-sm transition-all duration-300 opacity-50 hover:opacity-100 hidden md:flex items-center gap-2 border border-white/10"
        title="Toggle Fullscreen"
      >
        <svg
          id="icon-max"
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M8 3H5a2 2 0 0 0-2 2v3m18 0V5a2 2 0 0 0-2-2h-3m0 18h3a2 2 0 0 0 2-2v-3M3 16v3a2 2 0 0 0 2 2h3"
          ></path>
        </svg>
        <svg
          id="icon-min"
          class="hidden"
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M8 3v3a2 2 0 0 1-2 2H3m18 0h-3a2 2 0 0 1-2-2V3m0 18v-3a2 2 0 0 1 2-2h3M3 16h3a2 2 0 0 1 2 2v3"
          ></path>
        </svg>
        <span class="text-sm font-semibold pr-1">FULLSCREEN</span>
      </button>
    </div>

    <!-- FOOTER LINKS (Hidden on Mobile) -->
    <div class="hidden md:flex md:static md:flex-wrap justify-center gap-6 text-sm text-slate-500 mt-8 shrink-0">
      <a href="/terms" target="_blank" rel="noopener noreferrer" class="hover:text-white transition">Terms of Use</a>
      <a href="/privacy" target="_blank" rel="noopener noreferrer" class="hover:text-white transition">Privacy Policy</a
      >
      <a href="/refunds" target="_blank" rel="noopener noreferrer" class="hover:text-white transition">Refund Policy</a>
      <a href="mailto:support@ki10games.com" class="hover:text-white transition">Contact Support</a>
    </div>

    <!-- SEO / ADSENSE APPROVAL TEXT (Hidden on Mobile, Visible on Desktop) -->
    <section class="hidden md:block max-w-4xl mx-auto text-slate-400 mt-12 px-6 pb-24 text-left shrink-0">
      <h1 class="text-3xl font-bold text-white mb-4">About Skill Check</h1>
      <p class="mb-6 leading-relaxed">
        Skill Check is a daily retro-themed trivia and deckbuilding game. Test your video game knowledge, discover
        secret cartridge synergies, and compete on the global daily leaderboards. Every day features a newly curated set
        of cartridges spanning decades of gaming history.
      </p>

      <h2 class="text-2xl font-bold text-white mb-4">How to Play</h2>
      <ul class="list-disc pl-6 space-y-3 marker:text-cyan-500">
        <li>
          <strong class="text-slate-200">Draft Cartridges:</strong> Select from classic gaming franchises to build your console
          stack.
        </li>
        <li>
          <strong class="text-slate-200">Find Synergies:</strong> Slot matching cartridges together to trigger massive score
          multipliers and unlock hidden lore.
        </li>
        <li>
          <strong class="text-slate-200">Answer Trivia:</strong> Answer questions about the games you slotted. The higher
          you stack, the harder the questions become.
        </li>
        <li>
          <strong class="text-slate-200">Maintain Your Streak:</strong> Come back every day for a new challenge, build your
          daily streak, and fill out your Museum collection!
        </li>
      </ul>
    </section>
  </main>
</Layout>

<script>
  const btn = document.getElementById('fullscreen-btn');
  const container = document.getElementById('game-container');
  const iconMax = document.getElementById('icon-max');
  const iconMin = document.getElementById('icon-min');

  if (btn && container) {
    btn.addEventListener('click', () => {
      if (!document.fullscreenElement) {
        container.requestFullscreen().catch((err) => {
          console.error(`Error attempting to enable fullscreen: ${err.message}`);
        });
      } else {
        document.exitFullscreen();
      }
    });

    document.addEventListener('fullscreenchange', () => {
      if (document.fullscreenElement) {
        iconMax?.classList.add('hidden');
        iconMin?.classList.remove('hidden');
        btn.classList.add('bg-black/0');
      } else {
        iconMax?.classList.remove('hidden');
        iconMin?.classList.add('hidden');
        btn.classList.remove('bg-black/0');
      }
    });
  }
</script>
